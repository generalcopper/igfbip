{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          { "key": "X-Robots-Tag", "value": "noindex, nofollow" },
          { "key": "Cache-Control", "value": "no-store" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/auth/**", "run": { "serviceId": "ilp-social-backend", "region": "europe-west1" } },
      { "source": "/api/**",  "run": { "serviceId": "ilp-social-backend", "region": "europe-west1" } },
      { "source": "/health",  "run": { "serviceId": "ilp-social-backend", "region": "europe-west1" } }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
